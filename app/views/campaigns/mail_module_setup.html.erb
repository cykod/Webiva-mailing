<div class='admin_content'>
  <% if @updated %>
    <b><%= "Updated Options".t %></b>
  <% end -%>
  <% admin_form_for :options,@options, :html => { :class => 'admin_form' } , :update => 'domain_options' do |f| %>
    <%= f.text_field :mailing_contact_email, :required => true, :label=>'Site Email',:description => 'Default address that emails from the site come from'  %>
    <%= f.text_field :mailing_default_from_name,:label => 'Site Email Name', :description => 'Name associated with the site email' %>
    <%= f.text_area :company_address, :required => true, :rows => 4, :cols =>40, :description => 'Company business address used for CAN-SPAM Compliance'  %>
    <%= f.submit_tag 'Update All' %>
  <% end -%>
</div>
